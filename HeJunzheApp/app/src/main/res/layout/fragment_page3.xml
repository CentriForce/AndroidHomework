<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    android:orientation="vertical"
    tools:context=".viewpager.Page3Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/country_select1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10sp"
            android:fontFamily="@font/misans"
            android:text="USD"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/money_edittext1"
            android:layout_width="0sp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_weight="1"
            android:background="@drawable/shape_result_textview"
            android:fontFamily="@font/misans"
            android:hint="100"
            android:padding="12sp"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/country_select2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10sp"
            android:fontFamily="@font/misans"
            android:text="USD"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/money_edittext2"
            android:layout_width="0sp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_weight="1"
            android:background="@drawable/shape_result_textview"
            android:fontFamily="@font/misans"
            android:hint="100"
            android:padding="12sp"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/country_select3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10sp"
            android:fontFamily="@font/misans"
            android:text="USD"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/money_edittext3"
            android:layout_width="0sp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_weight="1"
            android:background="@drawable/shape_result_textview"
            android:fontFamily="@font/misans"
            android:hint="100"
            android:padding="12sp"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/country_select4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10sp"
            android:fontFamily="@font/misans"
            android:text="USD"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/money_edittext4"
            android:layout_width="0sp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_weight="1"
            android:background="@drawable/shape_result_textview"
            android:fontFamily="@font/misans"
            android:hint="100"
            android:padding="12sp"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>
